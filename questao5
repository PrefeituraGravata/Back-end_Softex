programa
{
	/*
Elabore um algoritmo que possa descobrir, através de perguntas e respostas, qual meio de transporte o usuário está pensando.
O usuário deverá escolher uma das seguintes opções:

- Trator
- Moto
- Bicicleta
- Trem
- Carro
- Caminhão
- Ônibus
- Paraquedas
- Balão
- Avião
- Helicóptero
- Submarino
- Barco
- Navio
- Lancha

Para chegar ao resultado, só devem ser usadas perguntas que retornem "Sim" ou "Não".

Exemplo:
É terrestre? Sim.
Cabe apenas uma pessoa? Sim.
É pesado? Não.
Tem pedal? Sim.
Então, o transporte escolhido foi a bicicleta.*/

funcao inicio()
	{
		logico verifica

			escreva("O transporte que você está pensando é terrestre? ")
			leia(verifica)

			se(verifica == verdadeiro){
				escreva("Cabe apenas uma pessoa? ")
				leia(verifica)
				se(verifica == verdadeiro){
					escreva("É pesado? ")
					leia(verifica)
						se(verifica == verdadeiro){
							escreva("O transporte que você está pensando é um trator!!!")
						}
							se(verifica == falso){
								escreva("Tem pedal? ")
								leia(verifica)

									se(verifica == verdadeiro){
										escreva("O transporte que você está pensando é uma bicicleta!!!")
									}
							}
				}senao{
					escreva("usa capacete? ")
					leia(verifica)
					se(verifica == verdadeiro){
						escreva("O transporte que você está pensando é uma moto!!!")
					}senao{
						escreva("Tem passageiro? ")
						leia(verifica)
							se(verifica == verdadeiro){
								escreva("Usa trilho? ")
								leia(verifica)
							}se(verifica == verdadeiro){
								escreva("O transporte que você está pensando é um trem!!!")
							}senao{
								escreva("Anda na pista? ")
								leia(verifica)
									se(verifica == verdadeiro){
										escreva("É alto? ")
										leia(verifica)

									se(verifica == verdadeiro){
										escreva("Usa carroceria? ")
										leia(verifica)

										se(verifica == verdadeiro){
											escreva("O transporte que você está pensando é um caminhão!!!")
										}
											se(verifica == falso){
												escreva("Pode ter cobrador? ")
												leia(verifica)
													se(verifica == verdadeiro){
														escreva("O transporte que você está pensando é um ônibus!!!")
													}
											}
									}
										se(verifica == falso){
											escreva("É veículo leve? ")
											leia(verifica)

												se(verifica == verdadeiro){
													escreva("O transporte que você está pensando é um trem!!!")
												}
										}
									}
							}
					}
				}
			}se(verifica == falso){
				escreva("O transporte que você está pensando é aéreo? ")
				leia(verifica)

				se(verifica == verdadeiro){
					escreva("Precisa pular? ")
					leia(verifica)

					se (verifica == verdadeiro){
						escreva("O transporte que você está pensando é uma asa-delta!!!")
					}senao{
						escreva("Viaja dentro? ")
						leia(verifica)

							se(verifica == verdadeiro){
								escreva("É devagar? ")
								leia(verifica)

									se(verifica == verdadeiro){
										escreva("O transporte que você está pensando é um balão!!!")
									}
							}se(verifica == falso){
								escreva("Tem piloto? ")
								leia(verifica)

									se(verifica == verdadeiro){
										escreva("Tem asas fixas? ")
										leia(verifica)

											se (verifica == verdadeiro){
												escreva("O transporte que você está pensando é um avião!!!")
											}
									}se(verifica == falso){
										escreva("Faz vôo vertical? ")
										leia(verifica)

											se(verifica == verdadeiro){
												escreva("O transporte que você está pensando é um helicóptero!!!")
											}
									}
							}
					}
				}
				se(verifica == falso){
					escreva("O transporte que você está pensando é aquático? ")
					leia(verifica)

						se(verifica == verdadeiro){
							escreva("É coberto d'água? ")
							leia(verifica)

								se(verifica == verdadeiro){
									escreva("O transporte que você está pensando é um submarino!!!")
								}senao{
									escreva("Navega na água? ")
									leia(verifica)

										se(verifica == verdadeiro){
											escreva("Possui vela? ")
											leia(verifica)

												se(verifica == verdadeiro){
													escreva("O transporte que você está pensando é um barco!!!")
												}
										}senao{
											escreva("Tem motor? ")
											leia(verifica)

												se (verifica == verdadeiro){
													escreva("É alto? ")
													leia(verifica)

														se (verifica == verdadeiro){
															escreva("O transporte que você está pensando é um navio!!!")
														}
												}senao{
													escreva("Pode ser descoberto? ")
													leia(verifica)

														se (verifica == verdadeiro){
															escreva("O transporte que você está pensando é uma lancha!!!")
														}
												}
										}
								}
						}
				}
			}
		
	}
}
